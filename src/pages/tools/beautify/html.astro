---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BeautifierUI from '../../../components/beautify/BeautifierUI.astro';

const title = 'HTML Beautifier | Pretty Print HTML Markup';
const description = 'Beautify HTML with clean indentation and consistent attributes, even large documents. Handles inline CSS/JS and minified markup without browser slowdown. Paste or upload.';
---

<BaseLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto">
    <nav class="flex mb-4 text-sm text-gray-500" aria-label="Breadcrumb">
      <div class="flex items-center space-x-2">
        <a href="/" class="hover:text-primary">Home</a>
        <span>›</span>
        <a href="/tools" class="hover:text-primary">Tools</a>
        <span>›</span>
        <a href="/tools/beautify" class="hover:text-primary">Code Beautifier</a>
        <span>›</span>
        <span class="text-gray-900">HTML Beautifier</span>
      </div>
    </nav>
    <header class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">HTML Beautifier</h1>
      <p class="mt-2 text-gray-600">Clean indentation with attributes preserved. Works even on minified markup.</p>
    </header>
  </div>

  <BeautifierUI sample={`<div><span class=\"n\">Hi</span><ul><li>1</li><li>2</li></ul></div>`}/>

  <div class="max-w-7xl mx-auto">
    <section class="mb-12 mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Related Formats</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="/tools/beautify/css" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">CSS Beautifier & Minifier</h3>
          <p class="text-sm text-gray-500 mt-1">Fix indentation and brace style</p>
        </a>
        <a href="/tools/beautify/minified" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">Beautify Minified Code</h3>
          <p class="text-sm text-gray-500 mt-1">Make HTML/CSS/JS readable</p>
        </a>
        <a href="/tools/beautify/json" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">JSON Formatter (No Validation)</h3>
          <p class="text-sm text-gray-500 mt-1">Best-effort formatting</p>
        </a>
      </div>
      <p class="text-sm text-gray-500 mt-4">See also: <a href="/tools/beautify" class="text-primary hover:text-blue-700">Code Beautifier hub</a> • <a href="/tools" class="text-primary hover:text-blue-700">All tools</a></p>
    </section>
  </div>
</BaseLayout>

