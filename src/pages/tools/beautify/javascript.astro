---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BeautifierUI from '../../../components/beautify/BeautifierUI.astro';

const title = 'JavaScript Beautifier | JS Code Formatter Online';
const description = 'Format messy JavaScript instantly without freezing on large files. Fix indentation, add missing semicolons, normalize quotes. Works with minified JS, ESLint-friendly output.';
---

<BaseLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto">
    <nav class="flex mb-4 text-sm text-gray-500" aria-label="Breadcrumb">
      <div class="flex items-center space-x-2">
        <a href="/" class="hover:text-primary">Home</a>
        <span>›</span>
        <a href="/tools" class="hover:text-primary">Tools</a>
        <span>›</span>
        <a href="/tools/beautify" class="hover:text-primary">Code Beautifier</a>
        <span>›</span>
        <span class="text-gray-900">JavaScript Beautifier</span>
      </div>
    </nav>
    <header class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">JavaScript Beautifier</h1>
      <p class="mt-2 text-gray-600">Paste JavaScript, JSON, or any code - we'll auto-detect and format it properly without browser slowdown. Great for large minified JS files, fixing indentation, and preparing code for linting.</p>
    </header>
  </div>

  <BeautifierUI sample={`const x={a:1,b:[1,2,3]};function sum(a,b){return a+b};console.log(sum(1,2))`}/>

  <div class="max-w-7xl mx-auto">
    <section class="mb-12 mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Related Formats</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="/tools/beautify/minified" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">Beautify Minified Code</h3>
          <p class="text-sm text-gray-500 mt-1">Make minified JS/CSS/HTML readable</p>
        </a>
        <a href="/tools/beautify/css" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">CSS Beautifier & Minifier</h3>
          <p class="text-sm text-gray-500 mt-1">Consistent brace and colon spacing</p>
        </a>
        <a href="/tools/beautify/json" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">JSON Formatter (No Validation)</h3>
          <p class="text-sm text-gray-500 mt-1">Tolerant, best-effort formatting</p>
        </a>
      </div>
      <p class="text-sm text-gray-500 mt-4">See also: <a href="/tools/beautify" class="text-primary hover:text-blue-700">Code Beautifier hub</a> • <a href="/tools" class="text-primary hover:text-blue-700">All tools</a></p>
    </section>
  </div>
</BaseLayout>

