---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BeautifierUI from '../../../components/beautify/BeautifierUI.astro';

const title = 'Code Beautifier - Devsgen';
const description = 'Beautify and format code instantly without browser freezing. Auto-detects JSON, Python, PHP, JavaScript and more. Handles large files and malformed syntax that other formatters reject.';
---

<BaseLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto">
    <nav class="flex mb-4 text-sm text-gray-500" aria-label="Breadcrumb">
      <div class="flex items-center space-x-2">
        <a href="/" class="hover:text-primary">Home</a>
        <span>›</span>
        <a href="/tools" class="hover:text-primary">Tools</a>
        <span>›</span>
        <span class="text-gray-900">Code Beautifier</span>
      </div>
    </nav>
    <header class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Online Code Beautifier</h1>
      <p class="mt-2 text-gray-600">Paste any code snippet, even large files - we'll auto-detect the format and beautify it instantly without freezing your browser. Handles malformed JSON, messy Python, and complex PHP structures.</p>
    </header>
  </div>

  <BeautifierUI sample={`{'name': 'Alice', 'items': [1,2,3,], 'active': true, 'config': {'theme': 'dark', 'lang': 'en'}}`}/>

  <div class="max-w-7xl mx-auto">
    <section class="mb-12 mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Formats & Workflows</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="/tools/beautify/javascript" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">JavaScript Beautifier</h3>
          <p class="text-sm text-gray-500 mt-1">Fix indentation, semicolons, and spacing</p>
        </a>
        <a href="/tools/beautify/python" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">Python Formatter</h3>
          <p class="text-sm text-gray-500 mt-1">PEP 8-friendly indentation and line length</p>
        </a>
        <a href="/tools/beautify/python-object" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">Python Object/Repr Beautifier</h3>
          <p class="text-sm text-gray-500 mt-1">Pretty print dicts, lists, tuples</p>
        </a>
        <a href="/tools/beautify/html" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">HTML Beautifier</h3>
          <p class="text-sm text-gray-500 mt-1">Pretty print HTML markup</p>
        </a>
        <a href="/tools/beautify/css" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">CSS Beautifier & Minifier</h3>
          <p class="text-sm text-gray-500 mt-1">Readable dev output or compressed prod CSS</p>
        </a>
        <a href="/tools/beautify/json" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">JSON Formatter (No Validation)</h3>
          <p class="text-sm text-gray-500 mt-1">Accepts malformed JSON; best-effort formatting</p>
        </a>
        <a href="/tools/beautify/sql" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">SQL Query Formatter</h3>
          <p class="text-sm text-gray-500 mt-1">Uppercase keywords and align joins</p>
        </a>
        <a href="/tools/beautify/minified" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">Beautify Minified Code</h3>
          <p class="text-sm text-gray-500 mt-1">Make minified JS/CSS/HTML readable</p>
        </a>
        <a href="/tools/beautify/php-dump" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
          <h3 class="font-medium text-gray-900">PHP Dump Beautifier</h3>
          <p class="text-sm text-gray-500 mt-1">Format var_dump/print_r output</p>
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
